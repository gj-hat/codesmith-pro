<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboottest1.mapper.tempMapper">
    <select id="findAll" resultType="com.example.springboottest1.domain.tempDomain">
--         select * from Template
        select * from teststudy.public."Template"
    </select>

    <select id="findNotAll" resultType="com.example.springboottest1.domain.tempDomain">
        select * from teststudy.public."Template" where "delMark" = false
    </select>


    <insert id="insertData" parameterType="com.example.springboottest1.domain.tempDomain">
        INSERT INTO public."Template" (
            "className", "packageName", "tableName", "templateContent", "templateId", "delMark", "createTime")
        VALUES (#{className},#{packageName},#{tableName},#{templateContent},#{templateId},#{delMark},#{createTime})
    </insert>

    <delete id="delDataId" parameterType="java.lang.Integer">
        UPDATE public."Template" SET "delMark" = true WHERE "templateId" = #{id}
    </delete>

</mapper>
